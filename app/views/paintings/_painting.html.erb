<div class="painting">
  <%= link_to image_tag(painting.image.url(:thumb)), painting if painting.image? %>
  <div class="name"><%= painting.image_file_name %></div>
  <div class="actions">
    <%= link_to "edit", edit_painting_path(painting) %> |
    <%= link_to "remove", painting, :confirm => 'Are you sure?', :method => :delete %>
  </div>
</div>
